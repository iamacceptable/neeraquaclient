<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ContactUsFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Contact Us"
                style="@style/Widget.MaterialComponents.Button"

                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/txt1"
                android:textColor="#fff"
                android:background="#7F87B3"
                android:fontFamily="monospace"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For any query contact us"
                android:textSize="30sp"
                android:id="@+id/txt"
                android:layout_below="@+id/txt1"
                android:fontFamily="@font/opensanslight"
                android:paddingTop="20sp"
                android:padding="10sp"
                android:layout_marginTop="30sp"
                />

            <Button
                android:id="@+id/phon"
                style="@style/Widget.MaterialComponents.Button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableStart="@drawable/menu_contact_us"
                android:drawableLeft="@drawable/menu_contact_us"
                android:drawablePadding="10dp"
                android:layout_below="@+id/txt"
                android:paddingTop="10sp"
                android:text="Call us"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_marginTop="40sp"/>

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email us"
            android:textSize="30sp"
                android:id="@+id/email"
                android:textColor="#fff"
                android:layout_below="@+id/phon"
                style="@style/Widget.MaterialComponents.Button"

                android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="30dp"
            android:layout_marginLeft="10dp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10dp"

            />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</FrameLayout>