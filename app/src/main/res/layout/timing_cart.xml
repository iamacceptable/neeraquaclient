<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="200dp">

    <TextView
        android:id="@+id/aggsgf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensanssemibold"
        android:gravity="center_horizontal"
        android:text="@string/please_select_a_time_slot_for_delivery"
        android:textColor="#2E4058"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:targetApi="jelly_bean" />


    <Spinner
        android:id="@+id/timeSlotSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/aggsgf"
        app:layout_constraintStart_toStartOf="@+id/aggsgf"
        app:layout_constraintTop_toBottomOf="@id/aggsgf" />

    <Button
        android:id="@+id/doBookingButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Do Booking"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timeSlotSpinner"
        app:layout_constraintStart_toStartOf="@+id/timeSlotSpinner"
        app:layout_constraintTop_toBottomOf="@+id/timeSlotSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>